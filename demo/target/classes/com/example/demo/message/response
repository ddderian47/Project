package com.example.demo.service;

import com.example.demo.message.request.UserRequest;
import com.example.demo.message.response.HelloResponse;

import jakarta.ws.rs.Consumes;
import jakarta.ws.rs.GET;
import jakarta.ws.rs.POST;
import jakarta.ws.rs.Path;
import jakarta.ws.rs.Produces;
import jakarta.ws.rs.QueryParam;
import jakarta.ws.rs.core.MediaType;
import jakarta.ws.rs.core.Response;

@Path("/api")
public class apipiSource {
    
    @GET
    @Path("/comprobar_conexion")
    @Produces(MediaType.APPLICATION_JSON)
    public Response conexion(
        @QueryParam("status") String status
    ) {

        HelloResponse response = new HelloResponse();

        response.setDeError(status);
        response.setMensaje(status);

        return Response.ok(response).build();
    }

    @POST
    @Path("/insertar_usuario")
    @Consumes(MediaType.APPLICATION_JSON)
    @Produces(MediaType.APPLICATION_JSON)
    public Response insertarUsuario (UserRequest userRequest){

        HelloResponse response = new HelloResponse();

        response.setCdError(0);
        response.setDeError("no hay error");

        if (userRequest.getAge() < 18) {
            response.setCdError(-1);
            response.setDeError("no puede ingresar");
    
        }
        return Response.ok(response).build();
    }


    
}